<div class={{if @error "ember-power-select--error"}}>
  <PowerSelectMultiple
    @allowClear={{true}}
    @searchEnabled={{true}}
    @searchField="name"
    @loadingMessage="Aan het laden..."
    @noMatchesMessage="Geen resultaten"
    @searchMessage="Typ om te zoeken"
    @options={{this.municipalities.value}}
    @renderInPlace={{true}}
    @selected={{@selected}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |municipality|
  >
    {{municipality.name}}
  </PowerSelectMultiple>
</div>

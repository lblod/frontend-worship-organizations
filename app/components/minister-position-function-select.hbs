<div class={{if @error "ember-power-select--error"}}>
  <PowerSelect
    @allowClear={{true}}
    @loadingMessage="Aan het laden..."
    @noMatchesMessage="Geen resultaten"
    @searchEnabled={{true}}
    @searchMessage="Typ om te zoeken"
    @searchField="label"
    @options={{this.positionFunctions.value}}
    @selected={{@selected}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |positionFunction|
  >
    {{positionFunction.label}}
  </PowerSelect>
</div>
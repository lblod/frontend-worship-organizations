    "@ember/test-helpers": "^2.9.3",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "@lblod/ember-acmidm-login": "2.0.0-beta.1",
    "@lblod/ember-mock-login": "0.7.0",
    "broccoli-asset-rev": "^3.0.0",
    "concurrently": "^8.0.1",
    "ember-auto-import": "^2.6.3",
    "ember-breadcrumb-trail": "^0.2.0",
    "ember-cli": "~4.12.1",
    "ember-cli-app-version": "^6.0.0",
    "ember-cli-babel": "^7.26.11",
    "ember-cli-dependency-checker": "^3.3.1",
    "ember-cli-dependency-lint": "^2.0.0",
    "ember-cli-deprecation-workflow": "^2.0.0",
    "ember-cli-htmlbars": "^6.2.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-concurrency": "^2.2.1",
    "ember-config-helper": "^0.1.3",
    "ember-copy": "^2.0.1",
    "ember-data": "~4.11.3",
    "ember-fetch": "^8.1.2",
    "ember-inflector": "^4.0.2",
    "ember-load-initializers": "^2.1.2",
    "ember-modifier": "^4.1.0",
    "ember-mu-transform-helpers": "^2.1.2",
    "ember-page-title": "^7.0.0",
    "ember-power-select": "^7.0.0",
    "ember-qunit": "^6.2.0",
    "ember-resolver": "^10.0.0",
    "ember-resources": "^4.8.2",
    "ember-simple-auth": "^4.2.1",
    "ember-source": "~4.12.0",
    "ember-template-lint": "^5.7.2",
    "ember-truth-helpers": "^3.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-ember": "^11.5.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-qunit": "^7.3.4",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.3",
    "loader.js": "^4.7.0",
    "prettier": "^2.8.7",
    "qunit": "^2.19.4",
    "qunit-dom": "^2.0.0",
    "release-it": "^14.12.4",
    "release-it-lerna-changelog": "^4.0.1",
    "sass": "^1.49.7",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-prettier": "^3.0.0",
    "tracked-built-ins": "^3.1.1",
    "webpack": "^5.78.0"
  },
  "engines": {
    "node": "14.* || 16.* || >= 18"
  },
  "ember": {
    "edition": "octane"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.hbs": "ember-template-lint --fix"
  },
  "volta": {
    "node": "16.13.2",
    "npm": "8.3.1"
  }
}
